<div class='col-lg-12 navbar navbar-default navbar-static-top'>
  <a href='/' class='navbar-brand'>Robot World</a>
</div>
<div class="container">
 <div class='row well'>
   <div class='col-md-6'>
    <h1>All Robots</h1>
      <% @robots.each do |robot| %>
        <h3>(<%= robot.id %>) <a href="/robots/<%= robot.id %>"><%= robot.name %></a></h3>
        <a href="/robots/<%= robot.id %>/edit">Edit</a>
        <form action="/robots/<%= robot.id %>" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" value="delete"/>
        </form>
      <% end %>
    </div>
  </div>
</div>
